{
  "name": "bfx-api-node-rest",
  "version": "8.0.0",
  "description": "Official Bitfinex REST v1 & v2 API interfaces",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint --fix src/ test/",
    "test": "npm run lint && npm run build && npm run unit",
    "unit": "NODE_ENV=test c8 --check-coverage --lines 90 --branches 90 --functions 85 --statements 90 --include='dist/**' --reporter=lcov --reporter=html --reporter=text node --import tsx/esm node_modules/.bin/mocha -b --recursive 'test/**/*.ts'",
    "docs": "rm -rf docs && typedoc",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitfinexcom/bfx-api-node-rest.git"
  },
  "keywords": [
    "bitfinex",
    "bitcoin",
    "BTC"
  ],
